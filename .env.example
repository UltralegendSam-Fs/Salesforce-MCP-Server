# Salesforce MCP Server Configuration
# Copy this file to .env and customize

# Server Configuration
SFMCP_MCP_SERVER_NAME=salesforce-mcp-server
SFMCP_LOG_LEVEL=INFO

# OAuth Configuration
SFMCP_OAUTH_CALLBACK_PORT=1717
SFMCP_OAUTH_TIMEOUT_SECONDS=300

# API Configuration
SFMCP_SALESFORCE_API_VERSION=59.0
SFMCP_MAX_RETRIES=3
SFMCP_RETRY_BACKOFF_SECONDS=2.0
SFMCP_REQUEST_TIMEOUT_SECONDS=120

# Deployment Configuration
SFMCP_DEPLOY_TIMEOUT_SECONDS=300
SFMCP_DEPLOY_POLL_INTERVAL_SECONDS=5

# Token Management
SFMCP_TOKEN_REFRESH_THRESHOLD_SECONDS=5400
SFMCP_TOKEN_STORAGE_ENCRYPTED=false
# SFMCP_TOKEN_ENCRYPTION_KEY=your-secret-key-here

# Rate Limiting
SFMCP_RATE_LIMIT_ENABLED=false
SFMCP_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Development
SFMCP_DEBUG_MODE=false
